<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonatorRegisterActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_blood_donation"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_marginTop="170dp"
    android:gravity="center">

    <EditText
        android:id="@+id/ed_firstname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="First name"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/ed_lastname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Last name"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <Spinner
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/bloodSpinner"
        android:hint="Choose Blood Group"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white">

    </Spinner>

    <EditText
        android:id="@+id/ed_address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Address"
        android:inputType="text"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Phone"
        android:textColorHint="@color/white"
        android:inputType="phone"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/btn_register_donator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_outline"/>
</LinearLayout>

</RelativeLayout>