<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <GridLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:rowCount="5"
                    android:columnCount="2"
                    android:layoutDirection="rtl"
                    android:columnOrderPreserved="false"
                    android:alignmentMode="alignMargins">
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
            >
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center"
                              android:orientation="vertical"
                              android:padding="16dp"
                >
                    <ImageView android:layout_width="80dp" android:layout_height="80dp"
                               android:src="@drawable/face_mask"
                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="زیبابی و بهداشتی"
                              android:id="@+id/health_id"
                              android:textSize="18sp"
                              android:textColor="@color/primaryText"
                              android:layout_marginTop="12px"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
            >
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center"
                              android:orientation="vertical"
                              android:padding="16dp"
                >
                    <ImageView android:layout_width="80dp" android:layout_height="80dp"
                               android:src="@drawable/heartbeat"

                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="طبی و صحی"
                              android:id="@+id/other_id"
                              android:textSize="18sp"
                              android:textColor="@color/primaryText"
                              android:layout_marginTop="12px"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
            >
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center"
                              android:orientation="vertical"
                              android:padding="16dp"
                >
                    <ImageView android:layout_width="80dp" android:layout_height="80dp"
                               android:src="@drawable/psycology"

                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="روانشناسی"
                              android:id="@+id/third_id"
                              android:textSize="18sp"
                              android:textColor="@color/primaryText"
                              android:layout_marginTop="12px"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="2"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
            >
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:gravity="center"
                              android:orientation="vertical"
                              android:padding="16dp"
                >
                    <ImageView android:layout_width="80dp" android:layout_height="80dp"
                               android:src="@drawable/running_icon"

                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="ورزشی"
                              android:id="@+id/foutht_id"
                              android:textSize="18sp"
                              android:textColor="@color/primaryText"
                              android:layout_marginTop="12px"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>
    </LinearLayout>

</ScrollView>